{
  "name": "training-typeorm",
  "version": "1.0.0",
  "description": "Training typeorm",
  "main": "index.js",
  "repository": "https://github.com/dacsang97/training-typeorm",
  "author": "Evan N <dacsang97@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "lint": "xo",
    "migration:create": "typeorm migration:create -n"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-config-xo-typescript": "^0.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.7",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.4",
    "typescript-eslint-parser": "^21.0.2",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "@types/pg": "^7.4.11",
    "express": "^4.16.4",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.9"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended",
      "xo-typescript"
    ],
    "extensions": [
      "ts"
    ],
    "envs": [
      "jest"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "new-cap": "off",
      "typescript/no-inferrable-types": "off",
      "import/no-unassigned-import": "off",
      "typescript/explicit-function-return-type": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,js}": [
        "xo --fix",
        "git add"
      ],
      "*.{md,json}": [
        "prettier --write",
        "git add"
      ]
    }
  }
}
